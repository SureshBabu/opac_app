<div class="span-14">
	<div class="span-14">	
		<div class="span-5">
			<h5>Request: <%= transferRequest.id %></h5>
		</div>
		<div class="span-8">
			<h6 style="float:right"><%= distance_of_time_in_words(transferRequest.created_at, Time.now) %> ago</h6>
		</div>
		<%= link_to_function image_tag("../stylesheets/plugins/buttons/icons/cross.png", :alt => ""), "$('#div_#{transferRequest.id}').hide();" %>
	</div>
	<div id = "<%= "div_#{transferRequest.id}" %>" class="span-14">
		<div class="span-13">
			<div class="span-10">
				<%= form_for transferRequest, :autocomplete => :off do |f| -%>
					<%= f.label :state %>: <%= f.text_field :state %>
					<br/>
					#<%= transferRequest.branch_id %>:
					<%= link_to transferRequest.branch.name, '#' if transferRequest.branch %> 
					<br/>
					<%= membership_info(transferRequest.card_id)%>
					<br/>
				 	#<%= link_to_function transferRequest.title.id, "$('#frm_#{transferRequest.id} input#title_id').val(#{transferRequest.title.id});$('#frm_#{transferRequest.id}').submit();" %>:
					<%= link_to transferRequest.title.title, '#' %> 
					<br/>
					<br/>
					<%= f.submit "Cancel" %>
					<%= f.submit "Change" %>
				<% end -%>
			</div>
			<div class="span-2">
				<%= image_tag image_url(transferRequest.title.id), :size => "100x150", :alt => 'No Image', :id => "img_#{transferRequest.id}" %>
			</div>
			<br/>
		</div>

		<div class="span-13">
			<%= form_tag('stock/show', :id => "frm_#{transferRequest.id}", :method=>'get', :remote => true, :autocomplete => :off) do -%>
				<%= label_tag :title_id, 'Alternate Title Id' %>
				<%= text_field_tag :title_id, params[:title_id], :onchange => "$('#frm_#{transferRequest.id}').submit();", :size => 15  %>
				<%= text_field_tag "title_#{transferRequest.id}", params[:title_name], :disabled => true, :size => 30  %>
				<%= link_to "Change", "#"%>
				<%= hidden_field_tag :result, params[:result], :value => "#{transferRequest.id}" %>
			<% end -%>
		</div>

		<div class="span-13">
			<%= render :partial => '/statistics/view', :locals => { :counter => transferRequest.id, :title_id => transferRequest.title_id } %>
		</div>
	</div>
</div>
<br/>
<hr/>
