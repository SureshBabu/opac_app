<div class="span-13">
	<div class="span-13">
		<% unless notice.nil? -%>
			<%= content_tag :p, notice, :class => 'notice' %>
		<% end -%>
	</div>
	<div class="span-13 push-3">
		<b><%= @author.name %></b>
	</div>
	<div class="span-3">
		<%= label_tag nil, 'First name'	, :style => 'float:right' %>
		<%= label_tag nil, 'Middle name'	, :style => 'float:right' %>
		<%= label_tag nil, 'Last name'		, :style => 'float:right' %>
	</div>
	<div class="span-5">
		<%= text_field_tag nil, @author.firstname, 	:class => 'readonly', :style => 'margin:0;padding:0' %>
		<%= text_field_tag nil, @author.middlename, 	:class => 'readonly', :style => 'margin:0;padding:0'%>
		<%= text_field_tag nil, @author.lastname, 		:class => 'readonly', :style => 'margin:0;padding:0'%>
	</div>
	<div id="links" class="span-13 push-11">
		<%= link_to 'Edit', {:controller => 'authors', :action=> 'edit', :id => @author.id, :sortdir => params[:sortdir], :sort => params[:sort], :page => params[:page] }, :remote => true %> |
		<%= link_to 'Back', {:controller => 'authors', :action=> 'index', :sortdir => params[:sortdir], :sort => params[:sort], :page => params[:page] }, :remote => true %>
	</div>
</div>
