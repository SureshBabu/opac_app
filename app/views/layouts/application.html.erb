<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= stylesheet_link_tag 'screen.css', :media => 'screen,projection' %>
  <%= stylesheet_link_tag 'print.css', :media => 'print' %>

  <!--[if lt IE 8]><stylesheet_link_tag 'ie.css' media='screen, projection'><![endif]-->

  <%= stylesheet_link_tag 'plugins/fancy-type/screen.css', :media => 'screen, projection' %>
  <%= stylesheet_link_tag 'application.css', :media => 'screen,projection' %>
	<%= stylesheet_link_tag 'jquery.jscrollpane.css', :media => 'screen,projection' %>
	<%= stylesheet_link_tag 'http://cdn.webrupee.com/font', :media=>'screen,projection' %>

  <%= javascript_include_tag :defaults %>
	<%= javascript_include_tag 'jit' %>
	<%= javascript_include_tag 'jquery.jscrollpane.min.js'%>
	<%= javascript_include_tag 'jquery.printElement.min.js'%>

  <%= csrf_meta_tag %>

	<script type="text/javascript">
	    $(document).ready(function() {
					$('.scroll-pane').jScrollPane();
	        <%= yield :javascript %>
	    });
	</script>
	
</head>

<body>

<div class="container">
	
	<div class="span-24">
		<p class="masthead"><%= image_tag('JustBooks.gif', :id => 'logo', :size => '253x56')%></p>
	</div>
  <% if user_signed_in? -%>
    <div id="user_login_box" class="span-8 push-16 last">
      <span> <%= current_user.email %> |
      <%= link_to 'My info', edit_user_registration_path %> |
      <%= link_to 'Sign out', destroy_user_session_path %> </span>
    </div>
  <% end -%>
	
	<div class="span-24">
		<%= yield %>
	</div>

	<div class="span-24">
		<p class="quiet push-10">Â© 2010 Strata Labs. - </p>
	</div>

</div>

</body>
</html>
